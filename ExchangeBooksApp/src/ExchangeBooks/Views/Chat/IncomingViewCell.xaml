<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="ExchangeBooks.Views.Chat.IncomingViewCell" xmlns:sty="clr-namespace:ExchangeBooks.Styles">
    <Frame BackgroundColor="{x:Static sty:Colors.LabelColor}" Padding="5" HeightRequest="18"
           Rotation="180" FlowDirection="LeftToRight" HasShadow="false" Margin="10,10,80,10">
        <Label Text="{Binding Content}" TextColor="{x:Static sty:Colors.BlackTextColor}"/>
    </Frame>
</ViewCell>
