<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExchangeBooks.Views.Chat.ChatInputBarView" xmlns:sty="clr-namespace:ExchangeBooks.Styles">
    <ContentView.Content>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <BoxView BackgroundColor="{x:Static sty:Colors.IconColor}" VerticalOptions="FillAndExpand" />
            <Entry x:Name="chatTextInput" 
                 Text="{Binding TextToSend}" 
                 Margin="1"  
                 TextColor="{x:Static sty:Colors.BlackTextColor}" 
                 Keyboard="Chat"
                 HorizontalOptions="FillAndExpand" 
                 PlaceholderColor="Black"
                 Placeholder="Type your message here"
                 BackgroundColor="LightGray"
                 Grid.Row="0" 
                 Grid.Column="0"/>
            <Label Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                 Text="Send" FontAttributes="Bold" FontSize="Small" TextColor="{x:Static sty:Colors.WhiteTextColor}"
                   BackgroundColor="{x:Static sty:Colors.IconColor}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                      Command="{Binding OnSendCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </ContentView.Content>
</ContentView>
