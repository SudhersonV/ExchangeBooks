<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="ExchangeBooks.Views.ViewPostPage" xmlns:l="clr-namespace:ExchangeBooks.Constants" x:Name="viewBook"
     xmlns:sty="clr-namespace:ExchangeBooks.Styles" xmlns:bhv="clr-namespace:ExchangeBooks.Behaviors"
     xmlns:utility="clr-namespace:ExchangeBooks.Utility" utility:ViewModelLocator.AutoWireViewModel="true"
     Title="{Binding Title}" Visual="Material">
    <ContentPage.Content>
        <StackLayout Style="{x:Static sty:Styles.DefaultStackLayoutStyle}">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Padding="0,10,0,0">
                <StackLayout HorizontalOptions="Center">
                    <Label Text="{Binding Post.Name}" FontSize="Title"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Style="{x:Static sty:Styles.DefaultLabelStyle}" Text="{Binding Post.Status}" />
                        <Switch IsToggled="{Binding IsPostOpen}" Style="{x:Static sty:Styles.DefaultSwitchStyle}">
                            <Switch.Behaviors>
                                <bhv:SwitchBehavior Command="{Binding PostStatusChanged}" />
                            </Switch.Behaviors>
                        </Switch>
                    </StackLayout>
                </StackLayout>
                <StackLayout>
                    <CarouselView x:Name="bookCarousel" ItemsSource="{Binding Post.Books}" CurrentItem="{Binding CurrentBook}" IndicatorView="indicatorView" HeightRequest="300">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" SnapPointsType="MandatorySingle" SnapPointsAlignment="Start" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Frame Style="{x:Static sty:Styles.ButtonFrameStyle}"
                                        HeightRequest="150" WidthRequest="150">
                                        <StackLayout HorizontalOptions="Center">
                                            <Label Text="{Binding Name}" FontSize="Title" />
                                            <Label Text="{Binding Description}" FontSize="Subtitle"/>
                                        </StackLayout>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.BookClicked,
                                                Source={x:Reference viewBook}}" CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView"
                       IndicatorsShape="Square"
                       IndicatorColor="LightGray"
                       SelectedIndicatorColor="DarkGray"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20">
                    </IndicatorView>
                </StackLayout>
                <StackLayout HorizontalOptions="Center">
                    <Label Text="{x:Static l:MaterialIcons.Delete}" Style="{x:Static sty:Styles.DefaultIconLabelStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DeletePost}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
