<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d" xmlns:partials="clr-namespace:ExchangeBooks.Views" xmlns:l="clr-namespace:ExchangeBooks.Constants"
       xmlns:sty="clr-namespace:ExchangeBooks.Styles" x:Class="ExchangeBooks.AppShell"
       BackgroundColor="{x:Static sty:Colors.BackgroundColor}" FlyoutBackgroundColor="{x:Static sty:Colors.BackgroundColor}"
       Shell.ForegroundColor="{x:Static sty:Colors.TabIconColor}"
       Shell.TabBarTitleColor="{x:Static sty:Colors.TabIconColor}" Shell.TabBarUnselectedColor="{x:Static sty:Colors.WhiteTextColor}"
       Title="ExchangeBooks" FlyoutHeaderBehavior="CollapseOnScroll">
    <Shell.Resources>
        <Style x:Key="FlyoutItemStyle" TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{x:Static sty:Colors.LabelColor}"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </Shell.Resources>
    <Shell.FlyoutHeader>
        <partials:FlyoutHeaderView />
    </Shell.FlyoutHeader>
    <Shell.ItemTemplate>
        <DataTemplate >
            <Grid Style="{StaticResource FlyoutItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="0.9*" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding FlyoutIcon}" Margin="5" HeightRequest="45"/>
                <Label Grid.Column="1" Text="{Binding Title}" FontSize="Small" VerticalTextAlignment="Center"
                       TextColor="{x:Static sty:Colors.WhiteTextColor}"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    <FlyoutItem Title="Books" Route="books" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Search" Route="search">
            <Tab.Icon>
                <FontImageSource Glyph="{x:Static l:MaterialIcons.Search}" FontFamily="{x:Static l:MaterialIcons.FontFamily}"
                                 Color="{x:Static sty:Colors.TabIconColor}" Size="Large" />
            </Tab.Icon>
            <ShellContent Title="Search" Route="search" ContentTemplate="{DataTemplate partials:SearchPage}" />
            <ShellContent Title="Filter" Route="filter" ContentTemplate="{DataTemplate partials:FilterPage}" />
        </Tab>
        <Tab Title="Post" Route="post">
            <Tab.Icon>
                <FontImageSource Glyph="{x:Static l:MaterialIcons.AddCircleOutline}" FontFamily="{x:Static l:MaterialIcons.FontFamily}"
                                Color="{x:Static sty:Colors.TabIconColor}" Size="Large" />
            </Tab.Icon>
            <ShellContent Title="Details" Route="details" ContentTemplate="{DataTemplate partials:PostDetailPage}" />
            <ShellContent Title="Books" Route="books" ContentTemplate="{DataTemplate partials:BookDetailPage}" />
            <ShellContent Title="Images" Route="images" ContentTemplate="{DataTemplate partials:BookImagePage}" />
            <ShellContent Title="Post" Route="post" ContentTemplate="{DataTemplate partials:AddPostPage}" />
        </Tab>
        <Tab Title="Messages" Route="messages">
            <Tab.Icon>
                <FontImageSource Glyph="{x:Static l:MaterialIcons.Chat}" FontFamily="{x:Static l:MaterialIcons.FontFamily}"
                                 Color="{x:Static sty:Colors.TabIconColor}" Size="Large" />
            </Tab.Icon>
            <ShellContent Title="Messages" Route="messages" ContentTemplate="{DataTemplate partials:MessagePage}" />
            <ShellContent Title="Notifications" Route="notifications" ContentTemplate="{DataTemplate partials:NotificationPage}" />
        </Tab>
        <Tab Title="My" Route="profile">
            <Tab.Icon>
                <FontImageSource Glyph="{x:Static l:MaterialIcons.Person}" FontFamily="{x:Static l:MaterialIcons.FontFamily}"
                                 Color="{x:Static sty:Colors.TabIconColor}" Size="Large" />
            </Tab.Icon>
            <ShellContent Title="Profile" Route="profile" ContentTemplate="{DataTemplate partials:ProfilePage}" />
            <ShellContent Title="Posts" Route="posts" ContentTemplate="{DataTemplate partials:MyPostsPage}" />
        </Tab>
    </FlyoutItem>
</Shell>